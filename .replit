modules = ["python-3.11", "nodejs-20"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start H-SAMP API Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start H-SAMP Frontend"

[[workflows.workflow]]
name = "Start H-SAMP API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py runserver 0.0.0.0:8000"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Start H-SAMP Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[nix]
channel = "stable-25_05"
packages = ["freetype", "glibcLocales"]

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "python manage.py collectstatic --noinput; gunicorn --bind=0.0.0.0:5000 --reuse-port --workers=2 --timeout=120 hsamp.wsgi:application"]
build = ["./build.sh"]
