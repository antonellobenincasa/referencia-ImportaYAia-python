packages = ["freetype", "glibcLocales"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind=0.0.0.0:5000", "--reuse-port", "--workers=2", "--timeout=120", "--access-logfile", "-", "--error-logfile", "-", "hsamp.wsgi:application"]
